<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".profesor.agregarPregunta">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pregunta"
        android:textSize="30dp"
        android:textColor="@color/black">
    </TextView>
    <EditText
        android:id="@+id/pregunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escriba Pregunta"
        android:layout_marginTop="12dp">
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opcion A"
        android:textSize="30dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/black">
    </TextView>
    <EditText
        android:id="@+id/opcion_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escriba Opcion A"
        android:layout_marginTop="12dp">
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opcion B"
        android:textSize="30dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/black">
    </TextView>
    <EditText
        android:id="@+id/opcion_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escriba Opcion B"
        android:layout_marginTop="12dp">
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opcion C"
        android:textSize="30dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/black">
    </TextView>
    <EditText
        android:id="@+id/opcion_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escriba Opcion C"
        android:layout_marginTop="12dp">
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opcion D"
        android:textSize="30dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/black">
    </TextView>
    <EditText
        android:id="@+id/opcion_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escriba Opcion D"
        android:layout_marginTop="12dp">
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Respuesta"
        android:textSize="30dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/black">
    </TextView>
    <EditText
        android:id="@+id/respuesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escriba Respuesta (ej: A, B, C o D)"
        android:layout_marginTop="12dp">
    </EditText>

    <Button
        android:id="@+id/agregar_pregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGREGAR"
        android:textSize="20dp">
    </Button>
    </LinearLayout>
</ScrollView>